<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.series.games.survivor.SurvivorGamesMenu"
    android:theme="@style/Base.Animation.AppCompat.DropDownUp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jump_to_maze_survivor"
        android:id="@+id/maze_exercise_button"
        android:onClick="onClick"
        android:layout_marginTop="155dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/set_level_of_game"
        android:hint="@string/level_of_game"
        android:layout_alignTop="@+id/maze_exercise_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maze_marathon"
        android:id="@+id/maze_marathon_button"
        android:onClick="onClick"
        android:textColor="#ffff492e"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/set_level_of_game"
        android:layout_toEndOf="@+id/set_level_of_game" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/highest_score"
        android:id="@+id/highest_score_introduction"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/displayed_highest_score_level"
        android:layout_below="@+id/highest_score_introduction"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/maze_exercise_button"
        android:layout_alignEnd="@+id/maze_exercise_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/displayed_highest_score_time"
        android:layout_below="@+id/displayed_highest_score_level"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/maze_exercise_button"
        android:layout_alignEnd="@+id/maze_exercise_button" />

</RelativeLayout>
